// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "alt-b": "workspace::ToggleLeftDock",
      "alt-e": "workspace::ToggleLeftDock",
      "alt-h": "pane::ActivatePreviousItem",
      "alt-l": "pane::ActivateNextItem",
      "alt-/": "workspace::ToggleBottomDock",
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "alt-e": "workspace::ToggleLeftDock",
      "alt-w": "pane::CloseActiveItem",
      "alt-b": "workspace::ToggleLeftDock",
      // "alt-h": "pane::ActivatePreviousItem",
      // "alt-l": "pane::ActivateNextItem",
      "alt-/": "workspace::ToggleBottomDock",
      "alt-s": "pane::DeploySearch",
      "alt-a": "editor::ToggleCodeActions",
      "alt-r": "editor::Rename",
      "alt-f": "editor::Format",
      "alt-d": "editor::GoToDiagnostic",
      "alt-i": "editor::CopyFileName",
      "alt-p": ["workspace::SendKeystrokes", "alt-i p"],
    },
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-s": ["workspace::SendKeystrokes", "escape : w enter"],
      "alt-p": ["workspace::SendKeystrokes", "alt-i ctrl-v"],
      "alt-i": "editor::CopyFileName",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "alt-e": "workspace::ToggleLeftDock",
    },
  },
  {
    // can also be "context": "Workspace > Dock > Terminal"
    "context": "Terminal",
    "bindings": {
      "alt-/": "workspace::ToggleBottomDock",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
    },
  },
]
